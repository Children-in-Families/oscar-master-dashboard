<% if admin_user_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light main">
    <a class="navbar-brand" href="/">
      <%= image_tag 'OSCaR_logo.png', height: 40 %>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if policy(:dashboard).show? %>
          <li class="nav-item <%= active_class(controller_name == 'usage_reports' && action_name == 'dashboard') %>">
            <a class="nav-link text-uppercase" href="<%= root_path %>">Dashboard <span class="sr-only">(current)</span></a>
          </li>
        <% end %>

        <% if policy(Organization).index? %>
          <li class="nav-item <%= active_class(controller_name == 'organizations') %>">
            <a class="nav-link text-uppercase" href="<%= organizations_path %>">Instances</a>
          </li>
        <% end %>

        <% if policy(UsageReport).show? %>
          <li class="nav-item <%= active_class(controller_name == 'usage_reports' && action_name == 'index') %>">
            <a class="nav-link text-uppercase" href="<%= usage_reports_path %>">Usage Report</a>
          </li>
        <% end %>

        <% if policy(BillableReport).index? %>
          <li class="nav-item <%= active_class(controller_name == 'billable_reports') %>">
            <a class="nav-link text-uppercase" href="<%= billable_reports_path %>">Finance</a>
          </li>
        <% end %>

        <% if policy(:duplication).index? %>
          <li class="nav-item <%= active_class(controller_name == 'duplications') %>">
            <a class="nav-link text-uppercase" href="<%= duplications_path %>">Duplication Validation</a>
          </li>
        <% end %>

        <% if policy(ReleaseNote).index? %>
          <li class="nav-item <%= active_class(controller_name == 'release_notes') %>">
            <a class="nav-link text-uppercase" href="<%= release_notes_path %>">Release Note</a>
          </li>
        <% end %>

        <% if policy(AdminUser).index? %>
          <li class="nav-item <%= active_class(controller_name == 'admin_users') %>">
            <a class="nav-link text-uppercase" href="<%= admin_users_path %>">User Account</a>
          </li>
        <% end %>

        <li class="nav-item <%= active_class(controller_name == 'messages') %>">
          <a class="nav-link text-uppercase" href="<%= messages_path(by_tenant: :cif) %>">Messages</a>
        </li>
      </ul>
    </div>

    <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
      <li class="nav-item dropdown">
        <a class="nav-item nav-link dropdown-toggle mr-md-2 font-weight-bold" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_admin_user.email %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
          <a class="dropdown-item" href="<%= destroy_admin_user_session_path %>" data-method="delete">Logout</a>
        </div>
      </li>
    </ul>
  </nav>
<% end %>
