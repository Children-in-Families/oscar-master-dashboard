<% content_for :page_title do %>
  <%= "Usage Report for #{params[:q][:month_eq]}/#{params[:q][:year_eq]}" %>
<% end %>

<%= content_for :action do %>
  <%= link_to_if policy(UsageReport).export?, 'Export', usage_report_path(id: 'added_cases', q: params[:q].to_unsafe_h, format: :xlsx), class: 'btn btn-primary ml-auto' %>
<% end %>

<%= render "tabs_menu" %>
<%= render "usage_reports/content/#{params[:id]}" %>
