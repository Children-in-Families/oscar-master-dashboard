<%= render 'nav_tabs' %>

<div class="row my-2">
  <div class="col-9 col-xl-10">
    <div class="row text-center">
      <div class="col-12 col-md-6">
        <div class="card mb-3">
          <div class="card-header">
            <h4>Total of Adult Cases <%= @report[:raw_data][:age_18_plus] %></h4>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="card mb-3">
          <div class="card-header">
            <h4>Total of Child Cases <%= @report[:raw_data][:age_child] %></h4>
          </div>
        </div>
      </div>
    </div>

    <div class="row pie-chart-wrapper text-center">
      <div class="col-12 col-md-6">
        <div class="card">
          <div class="card-body">
            <h5>
              Case by Age
            </h5>

            <div class="chart-container text-center mx-auto" style="max-heigh: 500px">
              <canvas class="chart-case-by-age" data-index-axis='y' data-source="<%= @report[:chart_data][:case_by_age].to_json  %>">
              </canvas>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-3">
        <div class="card">
          <div class="card-body">
            <h5>
              Case by Gender
            </h5>
            <div class="chart-container text-center mx-auto" style="max-heigh: 500px">
              <canvas class="pie-chart chart-holder" data-source="<%= { client_status: @report[:chart_data][:case_by_gender] }.to_json %>">
              </canvas>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-3">
        <div class="card">
          <div class="card-body">
            <h5>
              Case by Status
            </h5>
            <div class="chart-container text-center mx-auto" style="max-heigh: 500px">
              <canvas class="pie-chart chart-holder" data-source="<%= { client_status: @report[:chart_data][:case_by_status] }.to_json %>">
              </canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-3 col-xl-2">
    <%= render 'filter' %>
  </div>
</div>
