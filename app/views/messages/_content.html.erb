<div class="row my-2">
  <div class="col-9 col-xl-10">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"><%= sort_link(@q, :subject) %></th>
            <th scope="col"><%= sort_link(@q, :to) %></th>
            <th scope="col"><%= sort_link(@q, :created_at) %></th>
          </tr>
        </thead>
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td><%= message.subject %></td>
              <td><%= format_value(message.to) %></td>
              <td><%= format_value(message.created_at.to_date) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-3 col-xl-2">
    <%= simple_form_for @q, url: messages_path, method: :get do |f| %>
      <%= f.label 'NGO' %>
      <%= select_tag :by_tenant, options_from_collection_for_select(Organization.without_shared, :short_name, :full_name, params[:by_tenant])  %>
      
      <%= f.input :to_cont, label: "To" %>
      <%= f.input :subject_cont, label: "Subject" %>
      
      <%= f.label :created_at %>
      <div class="row">
        <div class="col-6">
          <%= f.input :created_at_gteq, label: false, input_html: { class: "form-control flatpickr", autocomplete: "off", value: params.dig(:q, :created_at_gteq) }, placeholder: "From" %>
        </div>
      
        <div class="col-6">
          <%= f.input :created_at_lteq, label: false, input_html: { class: "form-control flatpickr", autocomplete: "off", value: params.dig(:q, :created_at_lteq) }, placeholder: "To" %>
        </div>
      </div>

      <%= f.submit 'Submit', class: "btn btn-primary" %>
      <%= link_to "Clear Search", messages_path(scope: params[:scope])  %>
    <% end %>
  </div>
</div>
