<%= simple_form_for resource, wrapper: :horizontal_form do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :role, collection: current_admin_user.admin? ? AdminUser::ROLES : (AdminUser::ROLES - ['admin']), wrapper: :horizontal_select %>

  <% if resource.new_record? %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
