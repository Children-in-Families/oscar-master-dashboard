<%= content_for :extra_head do %>
  <script src="https://cdn.tiny.cloud/1/npglv10u9nxkmsg6rsv4ymunjcg7qi9idqtxuma4wpssu1y0/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
  <meta name="turbolinks-visit-control" content="reload">
<% end %>

<%= simple_form_for resource, wrapper: :horizontal_form do |f| %>
  <%= f.input :content, input_html: { class: "tinymce" } %>
  <%= f.input :attachments, as: :file, input_html: { value: "", multiple: true, accept: "image/*,application/pdf" } %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    tinymce.init({
      selector: 'textarea.tinymce',
      plugins: 'lists table',
      width : '100%',
      toolbar: 'styles | undo redo | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist | table',
    })
  })
</script>
